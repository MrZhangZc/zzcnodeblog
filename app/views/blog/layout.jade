extends ../layout

append css
  link(rel='stylesheet', href='/components/font-awesome/css/font-awesome.min.css')
  link(rel='stylesheet', href='/css/blog.css')
block main
  block header
     .blog-masthead
       .container
         .post-icon
           a(href='https://github.com/MrZhangZc' , target="_blank")
            i.fa.fa-github 
           a(href='http://git.oschina.net/zhangzc1' , target="_blank")
            i.fa.fa-mixcloud
           a(href='https://twitter.com/Promise_ZZC' , target="_blank")
            i.fa.fa-twitter
           a(href='http://www.chengshixinghui.com' , target="_blank")
            i.fa.fa-star
         p.blog-title Blog of zzc
      .blog-body
        .container
          .row
            block about
            .col-sm-8.blog-main
              != messages()
              block content
            .col-sm-3.col-sm-offset-1.blog-sidebar
                      .sidebar-module
                        p.sidebar-module-title Categories
                        ol.list-unstyled
                          each category in categories
                            li
                              a(href='/posts/category/' + category.title , target="_blank") #{category.title}
                      .sidebar-module
                        p.sidebar-module-title Link
                        ol.list-unstyled
                          li
                            a(href='#') GitHub
                          li
                            a(href='#') Twitter
                          li
                            a(href='#') Facebook
            block other
  block footer
    footer.blog-footer
      p blog by zhangzhichao
      p
        a(href='#') Back to top